---
import '../styles/global.css';

// 1. IMPORTAMOS COMPONENTES
import Layout from '../layouts/Layout.astro';
import IntroCard from '../components/IntroCard.astro';
import AvatarCard from '../components/AvatarCard.astro';
import AboutMe from '../components/AboutMe.astro';
import TechStack from '../components/TechStack.astro';
import ProjectCard from '../components/ProjectCard.astro';

// 2. IMPORTAMOS DATOS
import { directus } from '../lib/directus';
import { readItems } from '@directus/sdk';

// 3. L√ìGICA DE DATOS
let projects = [];
let experience = [];

try {
  projects = await directus.request(readItems('projects', {
    fields: ['*'],
    sort: ['-date_created']
  }));

  experience = await directus.request(readItems('experience', {
    fields: ['*'],
    sort: ['-start_date']
  }));
} catch (e) {
  console.error("Error connecting to CMS:", e);
}
---

<Layout title="Henry Marinho | Portfolio" description="Data Analyst & Project Manager">
  
  <main class="w-full max-w-6xl mx-auto p-4 flex flex-col gap-6 text-white pb-20">

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-4 items-stretch">
      
      <div class="lg:col-span-3 flex flex-col gap-4">
         <div class="flex-1">
            <IntroCard />
         </div>
         <div class="h-fit">
           <AvatarCard />
         </div>
      </div>

      <div class="lg:col-span-1 flex flex-col gap-4 h-full">
        <AboutMe />
        <TechStack />
      </div>

    </div>

    <section class="rounded-3xl bg-neutral-900 border border-neutral-800 p-6 overflow-hidden">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-blue-400">
        üöÄ Featured Projects <span class="text-xs text-gray-500 font-normal ml-2 border border-gray-700 px-2 py-1 rounded-full hidden sm:inline-block">Swipe üëâ</span>
      </h2>
      
      <div class="flex overflow-x-auto gap-4 pb-4 snap-x snap-mandatory scrollbar-hide">
        {projects.map((project: any) => (
          <div class="w-[85vw] sm:w-[320px] shrink-0 snap-center">
            <ProjectCard 
              title={project.title}
              description={project.description}
              url={project.slug ? `/project/${project.slug}` : (project.url || '#')}
              image={project.image} 
            />
          </div>
        ))}
      </div>
    </section>

    <section class="rounded-3xl bg-neutral-900 border border-neutral-800 p-8">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-purple-400">
        üíº Professional Experience
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {experience.map((job: any) => (
          <div class="group p-6 rounded-2xl bg-neutral-950 border border-neutral-800 hover:border-purple-500/50 transition-colors h-full">
            <div class="flex justify-between items-start mb-4">
              <span class="text-2xl">üè¢</span>
              <span class="text-xs font-mono text-gray-500 border border-neutral-700 px-2 py-1 rounded">
                {new Date(job.start_date).getFullYear()}
              </span>
            </div>
            <h3 class="text-lg font-bold text-white group-hover:text-purple-400 transition-colors">{job.company}</h3>
            <p class="text-sm font-medium text-gray-400 mb-3">{job.role}</p>
            <div class="text-gray-500 text-sm line-clamp-3" set:html={job.description} />
          </div>
        ))}
      </div>
    </section>

  </main>
</Layout>

<style is:global>
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
  .scrollbar-hide::-webkit-scrollbar { display: none; }
</style>