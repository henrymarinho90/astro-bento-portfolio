---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro"; 
import { directus } from '../lib/directus';
import { readItems } from '@directus/sdk';

// 1. CONFIGURACI√ìN DEL AVATAR OPTIMIZADO
const AVATAR_ID = "db72d639-7341-4437-a902-764714bdae2c"; 
const cmsUrl = import.meta.env.PUBLIC_DIRECTUS_URL || 'https://cms.romahomestore.com';

// Reducimos a 150px (renderizado es ~96px)
const avatarUrl = `${cmsUrl}/assets/${AVATAR_ID}?width=150&height=150&fit=cover&format=webp&quality=90`;

// 2. OBTENCI√ìN DE PROYECTOS (Optimizada para solo traer campos necesarios)
let projects = [];
try {
  projects = await directus.request(readItems('projects', {
    fields: ['slug', 'title', 'image', 'description', 'repo_link', 'url'],
    filter: { status: { _eq: 'published' } },
    limit: 3
  }));
} catch (error) {
  console.error("üî• Error cargando proyectos:", error);
}

// 3. DATOS EST√ÅTICOS
const techStack = ["SQL", "Python", "PowerBI", "Tableau", "Directus", "Astro", "Git", "Metabase", "Vibe Coding"];
const jobs = [
  { company: "Fountain Forward", role: "Analytics Director", year: "2025" },
  { company: "Fountain Forward", role: "Senior Analyst", year: "2022" },
  { company: "Conduent", role: "Workforce Development Manager", year: "2022" },
  { company: "Teleperformance", role: "WFM Junior Analyst", year: "2021" },
];
---

