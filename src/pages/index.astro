        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {jobs.map(job => (
                <div class="p-6 bg-neutral-800/20 border border-neutral-800 rounded-2xl hover:border-purple-500/30 hover:bg-neutral-800/40 transition duration-300 group">
