---
// 1. MODO EST√ÅTICO (Velocidad M√°xima)
export const prerender = true; 

import Layout from '../../layouts/Layout.astro';
import { directus } from '../../lib/directus';
import { readItems } from '@directus/sdk';

// 2. L√ìGICA DE RUTAS (GetStaticPaths)
export async function getStaticPaths() {
  try {
    const projects = await directus.request(readItems('projects', {
      fields: ['slug', 'title', 'image', 'content', 'repo_link', 'url', 'description', 'date_created'], // Agregamos date_created para SEO
      filter: { status: { _eq: 'published' } }
    }));

    if (!Array.isArray(projects)) return [];

    return projects.map((project) => ({
      params: { slug: project.slug },
      props: { project },
    }));

  } catch (error) {
    console.error("üî• Error en Build:", error);
    return [];
  }
}

// 3. RECUPERAR DATOS
const { project } = Astro.props;

if (!project) return Astro.redirect('/404');

// 4. OPTIMIZACI√ìN DE IM√ÅGENES
const cmsUrl = import.meta.env.PUBLIC_DIRECTUS_URL || 'https://cms.romahomestore.com';

// Pedimos imagen optimizada y recortada para el encabezado (1200x600 aprox)
const imageUrl = project.image 
  ? `${cmsUrl}/assets/${project.image}?width=1200&height=630&fit=cover&format=webp&quality=80` 
  : null;
---

<Layout 
    title={`${project.title} | Henry Marinho`} 
    description={project.description || "Project details and case study."}
    page="blog" 
    pubDate={project.date_created}
>
  <main class="w-full max-w-4xl mx-auto p-6 text-white pb-20 mt-8 font-sans">
    
    <nav class="mb-8">
        <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-neutral-400 hover:text-white transition-colors py-2 px-4 rounded-full border border-transparent hover:border-neutral-700 hover:bg-neutral-800/50">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
            Back to Home
        </a>
    </nav>

    <header class="mb-10 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white leading-tight">{project.title}</h1>
      
      {imageUrl && (
        <div class="relative w-full aspect-video rounded-3xl overflow-hidden border border-neutral-800 shadow-2xl mb-8 group">
            <div class="absolute inset-0 bg-blue-500/10 group-hover:bg-transparent transition-colors duration-500"></div>
            <img 
            src={imageUrl} 
            alt={project.title} 
            fetchpriority="high"
            loading="eager"
            class="w-full h-full object-cover"
            transition:name={`image-${project.slug}`} 
            />
        </div>
      )}
    </header>

    <article class="prose prose-invert prose-lg max-w-none prose-headings:text-blue-400 prose-a:text-purple-400 prose-img:rounded-2xl prose-p:text-neutral-300 prose-li:text-neutral-300">
      <div set:html={project.content} />
    </article>

    <div class="flex gap-4 mt-16 pt-8 border-t border-neutral-800 justify-center">
        {project.repo_link && (
            <a href={project.repo_link} target="_blank" rel="noopener noreferrer" class="px-6 py-2 bg-neutral-800 rounded-full hover:bg-neutral-700 transition border border-neutral-700 flex items-center gap-2">
                <span>GitHub Repo</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            </a>
        )}
        {project.url && (
            <a href={project.url} target="_blank" rel="noopener noreferrer" class="px-6 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-500 transition shadow-lg shadow-blue-900/20 flex items-center gap-2">
                <span>Live Demo</span>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
            </a>
        )}
    </div>

  </main>
</Layout>